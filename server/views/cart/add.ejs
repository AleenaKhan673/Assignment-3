<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page
creates form for users to input-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter your name" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="BrandTextField">Brand of Item</label>
                    <input type="text" class="form-control" id="BrandTextField" placeholder="Enter the Brand of the Item" name="Brand" required>
                </div>
                <div class="form-group">
                    <label for="ItemTypeTextField">Item Type</label>
                    <input type="text" class="form-control" id="ItemTypeTextField" placeholder="Enter the type of item" name="ItemType" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Item Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="enter the items Description" name="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Price of Item</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Item's Price" name="Price" required>
                </div>
                <div class="form-group">
                    <label for="AddressTextField">Address to Deliver</label>
                    <input type="text" class="form-control" id="AddresstextField" placeholder="Address for delivery" name="Address" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>
